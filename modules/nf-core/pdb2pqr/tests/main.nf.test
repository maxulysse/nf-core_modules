nextflow_process {

    name "Test Process PDB2PQR"
    script "../main.nf"
    process "PDB2PQR"

    tag "modules"
    tag "modules_nfcore"
    tag "pdb2pqr"

    test("proteomics - pdb - pqr") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'proteomics/pdb/1tim.pdb', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out.pqr,
                    process.out.conf,
                    file(process.out.log[0][1]).readLines().size(),
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }

    }

    test("proteomics - pdb - pqr - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'proteomics/pdb/1tim.pdb', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

}
